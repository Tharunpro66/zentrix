{# templates/super_admin/company/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    {# Render form rows with Bootstrap styling (using form_row or individual fields) #}
    {# For more control with Bootstrap 5, you might render fields individually #}

    <div class="mb-3">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-check mb-3">
        {{ form_widget(form.isActive) }} {# Widget first for Bootstrap form-check structure #}
        {{ form_label(form.isActive) }}
        {{ form_errors(form.isActive) }}
    </div>

    <button type="submit" class="btn btn-success">{{ button_label|default('Save Company') }}</button>
    <a href="{{ path('superadmin_company_index') }}" class="btn btn-secondary">Back to List</a>
{{ form_end(form) }}